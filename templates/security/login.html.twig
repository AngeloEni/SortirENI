{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <section class="vh-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4 text-black">

                    <div class="px-5 ms-xl-4">
                        <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                        <span class="h1 fw-bold mb-0">Bienvenue ..</span>
                    </div>

                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                        <form style="width: 23rem;" method="POST">

                            {% if error %}
                                <div class="alert alert-danger">l'identifiant et/ou le mot de passe sont érronés</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}

                            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                            <div class="form-outline mb-4">

                                <input type="text" value="{{ last_username }}" name="email_or_username" id="email_or_username" class="form-control form-control-lg" autocomplete="email_or_username" required autofocus>
                                <label class="form-label" for="email_or_username">Email address</label>


                            </div>

                            <div class="form-outline mb-4">



                                <input type="password" name="password" id="inputPassword" class="form-control form-control-lg" autocomplete="current-password" required>
                                <label class="form-label" for="email_or_username">Password</label>
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
                                {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html
                                #}
                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>


                            </div>

                            <div class="pt-1 mb-4">


                                <button class="btn btn-info btn-lg btn-block" type="submit">Sign in</button>


                            </div>
                        </form>

                    </div>

                </div>
                <div class="col-md-5 px-0 d-none d-sm-block">
                    <img src="{{ asset ('img/zYy84bcQQjEZxyK-Grumpy-Cat-PNG-Picture.png')}}" alt="image" class="img-fluid" style="object-fit: cover; object-position: left;">
                </div>
            </div>
        </div>
    </section>

{% endblock %}
